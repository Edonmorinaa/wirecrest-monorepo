{
    "compilerOptions": {
      "target": "es2020",
      "lib": ["es2020"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "noImplicitAny": false,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "declaration": true,
      "declarationMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts", "**/database-supabase-backup.ts"]
  }