# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://user:password@host:5432/dbname"

# =============================================================================
# NEXTAUTH CONFIGURATION (Required)
# =============================================================================
NEXTAUTH_SECRET="your-super-secret-key-here-min-32-chars"
NEXTAUTH_URL="https://yourdomain.com"

# =============================================================================
# APPLICATION CONFIGURATION (Required)
# =============================================================================
# Root domain for multi-tenancy (without protocol, can include port for dev)
# Production: yourdomain.com
# Development: wirecrest.local:3032
NEXT_PUBLIC_ROOT_DOMAIN="yourdomain.com"

# Node environment
NODE_ENV="production"

# =============================================================================
# MICROSERVICES URLS (Required for Production)
# =============================================================================
# Auth service URL (hosted on Railway)
AUTH_SERVICE_URL="https://auth-service.railway.app"

# Scraper service URL (hosted on Railway)
NEXT_PUBLIC_SCRAPER_API_URL="https://scraper-service.railway.app"

# =============================================================================
# STRIPE CONFIGURATION (Required for Billing)
# =============================================================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="your_stripe_secret_key_here"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="your_stripe_publishable_key_here"

# Get from: Stripe Dashboard -> Developers -> Webhooks
STRIPE_WEBHOOK_SECRET="your_webhook_secret_here"

# Stripe Product IDs for subscription plans
STRIPE_STARTER_PRODUCT_ID="prod_your_starter_product_id"
STRIPE_PROFESSIONAL_PRODUCT_ID="prod_your_professional_product_id"
STRIPE_ENTERPRISE_PRODUCT_ID="prod_your_enterprise_product_id"

# =============================================================================
# SUPABASE CONFIGURATION (Required for Notifications)
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="eyJ_your_supabase_anon_key_here"
SUPABASE_SERVICE_ROLE_KEY="eyJ_your_supabase_service_role_key_here"

# =============================================================================
# OAUTH PROVIDERS (Optional)
# =============================================================================
# Google OAuth
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your_google_client_id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="GOCSPX_your_google_client_secret"

# GitHub OAuth (Optional)
# Get from: https://github.com/settings/developers
GITHUB_CLIENT_ID="your_github_client_id"
GITHUB_CLIENT_SECRET="your_github_client_secret"

# =============================================================================
# EMAIL CONFIGURATION (Optional but Recommended)
# =============================================================================
# SMTP Configuration for sending emails
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@yourdomain.com"

# Resend API (Alternative to SMTP)
# Get from: https://resend.com/api-keys
RESEND_API_KEY="re_your_resend_api_key"

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching and rate limiting)
# =============================================================================
# Upstash Redis URL
# Get from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL="https://your-redis-url.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your_redis_token_here"

# Alternative: Standard Redis URL
REDIS_URL="redis://default:your_password@your_redis_host:6379"

# =============================================================================
# GOOGLE MAPS API (Optional - for location features)
# =============================================================================
# Get from: https://console.cloud.google.com/google/maps-apis
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="AIzaSy_your_google_maps_api_key"

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Sentry (Error Tracking)
# Get from: https://sentry.io/settings/
SENTRY_DSN="https://your_sentry_dsn@sentry.io/project_id"
SENTRY_AUTH_TOKEN="sntrys_your_sentry_auth_token"

# =============================================================================
# SVIX WEBHOOKS (Optional - for webhook delivery)
# =============================================================================
# Get from: https://dashboard.svix.com/
SVIX_URL="https://api.svix.com"
SVIX_API_KEY="sk_your_svix_api_key"

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_AUTOMATION="true"
NEXT_PUBLIC_ENABLE_NOTIFICATIONS="true"

# =============================================================================
# AI SERVICES (Optional)
# =============================================================================
# OpenAI API for AI features
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your_openai_api_key_here"

# =============================================================================
# FIREBASE (Optional - for push notifications)
# =============================================================================
NEXT_PUBLIC_FIREBASE_API_KEY="AIzaSy_your_firebase_api_key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your_sender_id"
NEXT_PUBLIC_FIREBASE_APP_ID="1:your_sender_id:web:your_app_id"
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID="G-your_measurement_id"
FIREBASE_ADMIN_PROJECT_ID="your-project-id"
FIREBASE_ADMIN_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com"
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"

# =============================================================================
# APIFY (Optional - for scraping tasks)
# =============================================================================
# Get from: https://console.apify.com/account/integrations
APIFY_API_TOKEN="apify_api_your_apify_token_here"
APIFY_WEBHOOK_SECRET="your_apify_webhook_secret"

# =============================================================================
# SLACK INTEGRATION (Optional)
# =============================================================================
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/your_slack_webhook_url"

# =============================================================================
# COOKIE CONFIGURATION (Required for Multi-Tenancy)
# =============================================================================
# For domain-wide cookies across subdomains
# Production: .yourdomain.com (with leading dot)
# Development: .wirecrest.local
COOKIE_DOMAIN=".yourdomain.com"

# =============================================================================
# SECURITY & CORS
# =============================================================================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS="https://yourdomain.com,https://auth.yourdomain.com,https://*.yourdomain.com"

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED="1"

# Skip environment validation during build (if using custom validation)
SKIP_ENV_VALIDATION="1"

