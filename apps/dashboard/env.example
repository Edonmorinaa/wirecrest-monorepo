# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://user:password@host:5432/dbname"

# =============================================================================
# NEXTAUTH CONFIGURATION (Required)
# =============================================================================
NEXTAUTH_SECRET="your-super-secret-key-here-min-32-chars"
NEXTAUTH_URL="https://yourdomain.com"

# =============================================================================
# APPLICATION CONFIGURATION (Required)
# =============================================================================
# Root domain for multi-tenancy (without protocol, can include port for dev)
# Production: yourdomain.com
# Development: wirecrest.local:3032
NEXT_PUBLIC_ROOT_DOMAIN="yourdomain.com"

# Node environment
NODE_ENV="production"

# =============================================================================
# MICROSERVICES URLS (Required for Production)
# =============================================================================
# Auth service URL (hosted on Railway)
AUTH_SERVICE_URL="https://auth-service.railway.app"

# Scraper service URL (hosted on Railway)
NEXT_PUBLIC_SCRAPER_API_URL="https://scraper-service.railway.app"

# =============================================================================
# STRIPE CONFIGURATION (Required for Billing)
# =============================================================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_live_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Get from: Stripe Dashboard -> Developers -> Webhooks
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Stripe Product IDs for subscription plans
STRIPE_STARTER_PRODUCT_ID="prod_xxxxxxxxxxxxx"
STRIPE_PROFESSIONAL_PRODUCT_ID="prod_xxxxxxxxxxxxx"
STRIPE_ENTERPRISE_PRODUCT_ID="prod_xxxxxxxxxxxxx"

# =============================================================================
# SUPABASE CONFIGURATION (Required for Notifications)
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL="https://xxxxxxxxxxxxx.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="eyJxxxxxxxxxxxxxxxxxxxxxxxxx"
SUPABASE_SERVICE_ROLE_KEY="eyJxxxxxxxxxxxxxxxxxxxxxxxxx"

# =============================================================================
# OAUTH PROVIDERS (Optional)
# =============================================================================
# Google OAuth
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="xxxxxxxxxxxxx.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="GOCSPX-xxxxxxxxxxxxxxxxxxxxx"

# GitHub OAuth (Optional)
# Get from: https://github.com/settings/developers
GITHUB_CLIENT_ID="xxxxxxxxxxxxxxxxxxxxx"
GITHUB_CLIENT_SECRET="xxxxxxxxxxxxxxxxxxxxx"

# =============================================================================
# EMAIL CONFIGURATION (Optional but Recommended)
# =============================================================================
# SMTP Configuration for sending emails
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@yourdomain.com"

# Resend API (Alternative to SMTP)
# Get from: https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxx"

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching and rate limiting)
# =============================================================================
# Upstash Redis URL
# Get from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL="https://xxxxxxxxxxxxx.upstash.io"
UPSTASH_REDIS_REST_TOKEN="xxxxxxxxxxxxxxxxxxxxx"

# Alternative: Standard Redis URL
REDIS_URL="redis://default:xxxxxxxxxxxxx@xxxxxxxxxxxxx.upstash.io:6379"

# =============================================================================
# GOOGLE MAPS API (Optional - for location features)
# =============================================================================
# Get from: https://console.cloud.google.com/google/maps-apis
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxx"

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Sentry (Error Tracking)
# Get from: https://sentry.io/settings/
SENTRY_DSN="https://xxxxxxxxxxxxx@o0000000.ingest.sentry.io/0000000"
SENTRY_AUTH_TOKEN="sntrys_xxxxxxxxxxxxxxxxxxxxx"

# =============================================================================
# SVIX WEBHOOKS (Optional - for webhook delivery)
# =============================================================================
# Get from: https://dashboard.svix.com/
SVIX_URL="https://api.svix.com"
SVIX_API_KEY="sk_xxxxxxxxxxxxxxxxxxxxx"

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_AUTOMATION="true"
NEXT_PUBLIC_ENABLE_NOTIFICATIONS="true"

# =============================================================================
# AI SERVICES (Optional)
# =============================================================================
# OpenAI API for AI features
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# =============================================================================
# FIREBASE (Optional - for push notifications)
# =============================================================================
NEXT_PUBLIC_FIREBASE_API_KEY="AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxx"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="000000000000"
NEXT_PUBLIC_FIREBASE_APP_ID="1:000000000000:web:xxxxxxxxxxxxx"
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID="G-XXXXXXXXXX"
FIREBASE_ADMIN_PROJECT_ID="your-project-id"
FIREBASE_ADMIN_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com"
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nxxxxxxxxxxxxx\n-----END PRIVATE KEY-----\n"

# =============================================================================
# APIFY (Optional - for scraping tasks)
# =============================================================================
# Get from: https://console.apify.com/account/integrations
APIFY_API_TOKEN="apify_api_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
APIFY_WEBHOOK_SECRET="xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# =============================================================================
# SLACK INTEGRATION (Optional)
# =============================================================================
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/xxxxxxxxxxxxx"

# =============================================================================
# COOKIE CONFIGURATION (Required for Multi-Tenancy)
# =============================================================================
# For domain-wide cookies across subdomains
# Production: .yourdomain.com (with leading dot)
# Development: .wirecrest.local
COOKIE_DOMAIN=".yourdomain.com"

# =============================================================================
# SECURITY & CORS
# =============================================================================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS="https://yourdomain.com,https://auth.yourdomain.com,https://*.yourdomain.com"

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED="1"

# Skip environment validation during build (if using custom validation)
SKIP_ENV_VALIDATION="1"

