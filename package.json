{
  "private": true,
  "name": "wirecrest",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "packageManager": "yarn@4.0.2",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "dev:dashboard": "turbo run dev --filter=@wirecrest/dashboard",
    "dev:scraper": "turbo run dev --filter=@wirecrest/scraper",
    "dev:auth": "turbo run dev --filter=@wirecrest/auth-service"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "turbo": "^2.5.8",
    "typescript": "^5.2.0"
  },
  "resolutions": {
    "@typescript-eslint/typescript-estree": "^8.44.0",
    "@smithy/util-hex-encoding": "^4.1.0"
  },
  "dependencies": {
    "jose": "^6.1.0",
    "net": "^1.0.2",
    "tls": "^0.0.1"
  }
}
