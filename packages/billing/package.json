{
  "name": "@wirecrest/billing",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "require": "./dist-cjs/server/index.cjs"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "require": "./dist-cjs/server/index.cjs"
    }
  },
  "license": "MIT",
  "scripts": {
    "generate": "echo 'no-op'",
    "build": "tsc && yarn build:cjs",
    "build:cjs": "tsc -p tsconfig.cjs.json && node -e \"const { writeFileSync }=require('fs');writeFileSync('dist-cjs/package.json','{\\\"type\\\":\\\"commonjs\\\"}')\"",
    "dev": "tsc --watch",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "type-check": "tsc --noEmit",
    "migrate-stripe-metadata-to-db": "tsx scripts/migrate-stripe-metadata-to-db.ts"
  },
  "dependencies": {
    "@stripe/react-stripe-js": "^5.0.0",
    "@stripe/stripe-js": "^8.0.0",
    "@wirecrest/auth-core": "workspace:^",
    "@wirecrest/core": "workspace:^",
    "@wirecrest/db": "workspace:^",
    "decimal.js": "^10.4.3",
    "redis": "^5.8.3",
    "stripe": "^19.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@types/redis": "^4.0.11",
    "@wirecrest/typescript-config": "workspace:*",
    "eslint": "^9.32.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typescript": "^5.2.0"
  },
  "peerDependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
