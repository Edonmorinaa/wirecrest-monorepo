{
  "name": "@wirecrest/auth-next",
  "version": "1.0.0",
  "type": "module",
  "description": "Next.js authentication package that uses auth-core for server logic and provides NextAuth config + client hooks",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "default": "./dist/core.js"
    },
    "./config": {
      "types": "./dist/config/nextAuth.d.ts",
      "default": "./dist/config/nextAuth.js"
    }
  },
  "dependencies": {
    "@wirecrest/auth-core": "workspace:^",
    "axios": "^1.6.0"
  },
  "peerDependencies": {
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@wirecrest/typescript-config": "workspace:*",
    "next-auth": "^5.0.0-beta.29",
    "typescript": "^5.2.0"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "dev": "echo 'No dev step required for auth package'",
    "lint": "echo 'No lint step required for auth package'",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  }
}
